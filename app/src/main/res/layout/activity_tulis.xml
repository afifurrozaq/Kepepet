<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afifur.kepepet.Tulis">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        android:scrollbars="horizontal"
        app:tabGravity="center"
        app:tabMode="scrollable" >
    </android.support.design.widget.TabLayout>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ceritakan Masalah Anda"
        android:paddingBottom="25px"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tabLayout"
        android:layout_alignStart="@+id/textArea_information" />

    <EditText
        android:id="@+id/textArea_information"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="10"
        android:hint="(Minimal 30 Kata)"
        android:background="@drawable/border"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:layout_below="@+id/textArea_information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
