<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afifur.kepepet.Detail"


    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"

    >

<android.support.design.widget.TabLayout
    android:id="@+id/tabLayout"
    android:layout_below="@id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/indigo"
    android:scrollbars="horizontal"
    app:tabGravity="center"
    app:tabMode="scrollable" >
    </android.support.design.widget.TabLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabLayout"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp">

        <!--  Name Label -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ban"

            />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/name"
            android:inputType="textCapWords"
            android:text=" Mukidi" />

        <!-- Email Label -->
        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone"
            android:inputType="textPhonetic"
            android:text=" +62 867688787" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:inputType="textEmailAddress"
            android:text=" Jl. Sumber Sari gang 7" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp. 15.000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:theme="@style/AppTheme.Button3" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:id="@+id/telephone"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone"
            android:text="TELEPHONE"
            android:theme="@style/AppTheme.Button2" />


        <Button
            android:id="@+id/sms"
            android:layout_width="169dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_sms"
            android:text="SMS"
            android:theme="@style/AppTheme.Button2" />

    </LinearLayout>



    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

